<body>

    <!-- Contenedor Principal de la Encuesta -->
    <div class="survey-container">
        
        <p class="sub-text">
        En una escala del 0 al 10, ¿qué tan probable es que recomiendes este equipo Mesh autoinstalable a familiares o amigos?
        </p>

        <!-- Barra de Escala (1-10) -->
        <div id="scale-bar">
            <!-- Los 10 elementos de la escala se generarán aquí con JavaScript -->
        </div>

        <!-- Etiqueta de la escala -->
        <div class="label-container">
            <span class="low-label">1 (Insatisfecho)</span>
            <span class="high-label">10 (Satisfecho)</span>
        </div>
        
        <!-- Resultado de la Selección -->
        <div class="info-text">
            Valor Seleccionado:
            <span id="selected-value" class="rating-value">N/A</span>
        </div>

        <!-- Botón de Envío (Simulación) -->
        

        <!-- Área de mensajes (para errores o éxito) -->
        <p id="message-area" class="message-area"></p>

    </div>

    <!-- Scripts de JavaScript Puro -->
    <script>
        // --- Lógica de la Barra de Escala (Todo en JS puro) ---

        const scaleBar = document.getElementById('scale-bar');
        const selectedValueSpan = document.getElementById('selected-value');
        const submitButton = document.getElementById('submit-button');
        const messageArea = document.getElementById('message-area');

        let selectedRating = 0; // El valor de la escala seleccionado localmente

        /**
         * 1. Genera y añade los 10 elementos de la escala al contenedor.
         */
        function createScaleItems() {
            scaleBar.innerHTML = '';
            for (let i = 1; i <= 10; i++) {
                const item = document.createElement('div');
                item.setAttribute('data-value', i);
                // Usamos la clase CSS nativa 'scale-item'
                item.className = 'scale-item';
                item.textContent = i;
                item.addEventListener('click', handleItemClick);
                scaleBar.appendChild(item);
            }
        }

        /**
         * 2. Maneja el evento de clic, actualiza la selección visual y el estado.
         */
        function handleItemClick(event) {
            const clickedItem = event.target;
            const value = parseInt(clickedItem.getAttribute('data-value'));

            // Limpia todas las selecciones
            document.querySelectorAll('.scale-item').forEach(item => {
                item.classList.remove('selected');
            });

            // Marca el elemento clickeado como seleccionado
            clickedItem.classList.add('selected');

            // Actualiza el estado local y la visualización
            selectedRating = value;
            selectedValueSpan.textContent = value;
            submitButton.disabled = false;
            messageArea.textContent = ""; // Limpiar mensajes
        }

        /**
         * 3. Manejador del botón de envío (simulado)
         * Simula el procesamiento de datos con un setTimeout.
         */
        function handleSubmit() {
            if (selectedRating === 0) {
                messageArea.textContent = "Por favor, selecciona un valor antes de enviar.";
                messageArea.style.color = "#b91c1c"; // Rojo neutro para error
                return;
            }

            submitButton.disabled = true;
            submitButton.textContent = "Enviando...";

            // Simulación de envío de datos
            setTimeout(() => {
                messageArea.textContent = `¡Gracias! Respuesta ${selectedRating}/10 capturada localmente.`;
                messageArea.style.color = "#374151"; // Gris oscuro para éxito
                
                // Limpia la selección para un nuevo intento (opcional)
                document.querySelectorAll('.scale-item').forEach(item => {
                    item.classList.remove('selected');
                });
                selectedRating = 0;
                selectedValueSpan.textContent = "N/A";
                
                submitButton.textContent = "Enviar Respuesta";
                submitButton.disabled = true; // Deshabilita hasta que se seleccione de nuevo
            }, 1500); // Simula un retraso de 1.5 segundos
        }

        /**
         * 4. Configuración inicial al cargar la ventana.
         */
        window.onload = function() {
            createScaleItems();
            submitButton.addEventListener('click', handleSubmit);
            console.log("Barra de escala y listeners configurados.");
        };
    </script>
</body>
</html>
